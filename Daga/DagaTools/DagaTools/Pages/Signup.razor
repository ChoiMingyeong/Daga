@page "/signup"
@attribute [AllowAnonymous]

@if (null != AuthService.Account)
{
    NavigationManager.NavigateTo("");
}

<MudContainer>
    <MudGrid Justify="Justify.Center">
        <MudCard>
            <MudCardContent>
                <MudForm>

                </MudForm>

            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" OnClick="OnSignupButtonClicked">Signup</MudButton>
            </MudCardActions>
        </MudCard>
    </MudGrid>
</MudContainer>

@code
{
    DagaCommon.Models.SignupModel signupData = new()
        {
            Email = "test@example.com",
            Password = "1234",
            Name = "test",
        };

    private async Task OnSignupButtonClicked()
    {
        if (true == await AuthService.SignupAsync(signupData))
        {
            NavigationManager.NavigateTo("login");
        }
    }
}