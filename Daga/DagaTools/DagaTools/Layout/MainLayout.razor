@inherits LayoutComponentBase

<MudThemeProvider Theme="theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudAvatar>
            <MudIconButton Icon="@Icons.Material.Filled.Person"/>
        </MudAvatar>
    </MudAppBar>
    <MudDrawer @bind-Open="@drawerOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    MudTheme theme = new()
        {
            PaletteLight = new()
            {
                AppbarBackground = Colors.Gray.Default,
                Primary = Colors.Gray.Darken3,
            }
        };

    bool drawerOpen = true;
    bool isDefaultAvartar = false;
    string name = "min";
    string src = string.Empty;
    //string src = "icon-192.png";

    void DrawerToggle()
    {
        drawerOpen = !drawerOpen;
    }
}